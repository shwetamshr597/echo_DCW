<script>
    require([
            'jquery',
            'Magento_Ui/js/modal/alert',
            'prototype'
        ], function($) {
            //<![CDATA[
            var entity = $('#entity');
            entity.hide();
            entity.closest('fieldset').find('label.label.admin__field-label').css('visibility','hidden');
            $(entity).val('amfile_files_import');
            varienImport.handleEntityTypeSelector();
            $('#sample-file-link').attr('href', '<?= $block->escapeUrl($block->getGenerateUrl()) ?>');
            //]]>
        }
