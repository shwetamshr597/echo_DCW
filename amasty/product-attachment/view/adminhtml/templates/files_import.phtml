<script>
    require(['jquery', 'mage/translate'], function ($, $t) {
        $('#sample-file-link').text($t('Generate Import File'));
        var amInterval = setInterval(function() {
            if (!$('#edit_form').is(':visible')) {
                $('.action-next-step').attr('disabled', false);
                $('.action-next-step').click(function () {
                    location.href='<?= $block->escapeUrl($block->getFinishLink()); ?>';
                });

                $('.action-next-step').find('span').text($t('Finish'));
                $('.action-back-step').hide();
                $('.action-wrap .action-cancel').hide();
                clearInterval(amInterval);
            }
        }, 500);
    })
</script>