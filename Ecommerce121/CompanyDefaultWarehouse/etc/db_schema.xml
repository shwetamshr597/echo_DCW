<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="company" resource="default" engine="innodb" comment="Company Table">
        <column xsi:type="varchar" name="default_warehouse_id" nullable="true"
                comment="Default Warehouse ID"/>
    </table>
    <table name="sales_order" resource="default" engine="innodb">
        <column xsi:type="varchar" name="company_warehouse" nullable="true"
                comment="Customer's Company Warehouse"/>
    </table>
</schema>
